@model IEnumerable<fuskill.Services.DTOs.SkillDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Skills</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <style>
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 17px;
        }
    </style>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                    <style>
                        .btn-primary {
                            background-color: #007bff;
                            border-color: #007bff;
                            border-radius: 17px;
                        }
                    </style>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
