@model WebApplication2.Models.User

<h2>Offer Your Skills</h2>
<form asp-action="Offer" asp-controller="Skill" method="post">
    <div>
        <label>Select skill:</label>
        <select name="skillId">
            @foreach (var skill in Model.UserSkills)
            {
                <option value="@skill.SkillId">@skill.Skill.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Experience (years):</label>
        <input type="number" name="experienceYears" />
    </div>
    <button type="submit">Offer Skill</button>
</form>