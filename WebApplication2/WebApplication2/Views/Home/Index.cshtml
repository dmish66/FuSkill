@{
    ViewData["Title"] = "Home";
}

<style>
    
    .jumbotron {
        background-color: #f8f9fa;
        padding: 3rem;
        border-radius: 30px;
    }

    .card {
        border: none;
        transition: transform 0.3s;
        background-color: #fff;
        border-radius: 30px;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-icon {
        font-size: 3rem;
        color: #007bff;
        margin-bottom: 1rem;
    }

    .card-title {
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .card-text {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container">
    <div class="jumbotron text-center">
        <h1>Welcome to the Skills Exchange Platform</h1>
        <p class="lead">Find people with skills or offer your skills to others!</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-search card-icon"></i>
                    <h2 class="card-title">Search for People with Skills</h2>
                    <p class="card-text">Discover individuals who possess the skills you need for your projects.</p>
                    <a href="@Url.Action("Search", "Search")" class="btn btn-primary">Start Searching</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-users card-icon"></i>
                    <h2 class="card-title">Offer Your Skills</h2>
                    <p class="card-text">Showcase your expertise and offer your skills to others in need.</p>
                    <a href="@Url.Action("Offer", "Offer")" class="btn btn-primary">Offer Your Skills</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-user card-icon"></i>
                    <h2 class="card-title">View/Edit Profile</h2>
                    <p class="card-text">Manage your profile details and keep them up to date.</p>
                    <a href="@Url.Action("Profile", "Profile")" class="btn btn-primary">View/Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
